<article
  class="item relative h-full flex flex-column p-2 rounded-2xl bg-theme-bg-secondary border border-theme-divider-tertiary shadow-2">
    <%= link_to "", book, class: "absolute inset-0 w-full h-full focus-outline", target: "_blank", rel: "noopener", title: book.book_title %>
  <div class="flex flex-column mx-4">
    <h3 class="my-2 break-words font-bold typo-body text-theme-label-primary multi-truncate line-clamp-3">
      <%= book.book_title %></h3>
  </div>
  <div class="flex-1"></div>
  <div class="my-2 rounded-xl h-40 relative overflow-hidden">
    <%= image_tag "thumbnails/thumb#{rand(4)}.jpg", class: "absolute block inset-0 w-full h-full m-auto object-cover" %>
  </div>
  <div class="flex flex-row items-center justify-between mx-4" style="pointer-events: none;">
    <div style="width: 4.875rem;"
      class="small btn-quaternary flex flex-row items-stretch select-none btn-tertiary-avocado"></div>
    <div style="width: 4.875rem;"
      class="small btn-quaternary flex flex-row items-stretch select-none btn-tertiary-avocado"></div>
    <button
      class="iconOnly small btn flex-row items-center justify-center border typo-callout font-bold no-underline shadow-none cursor-pointer select-none focus-outline flex relative btn-tertiary-bun"></button>
  </div>
</article>
