<header
  class="header bg-theme-bg-primary border-theme-divider-tertiary border-b justify-between items-center flex flex-row">
  <div class="flex flex-row flex-1 justify-start">
    <a class="flex items-center" href="/">
      <%= image_tag asset_path("logosun.svg"), id: "logo" %>
    </a>
  </div>

  <% if logged_in? %>
    <button
      class="items-center p-0 ml-0.5 font-bold no-underline rounded-lg cursor-pointer text-theme-label-primary bg-theme-bg-secondary typo-callout flex"
      type="button">
      <span class="block ml-3 mr-2"><%= current_user.name %></span>
      <div class="w-8 h-8 rounded-10 relative overflow-hidden">
        <img class="absolute block inset-0 w-full h-full m-auto object-cover"
          src="https://avatars.githubusercontent.com/u/45041942?v=4" alt="" />
      </div>
    </button>
  <% else %>
    <button
      class="items-center p-0 ml-0.5 font-bold no-underline rounded-lg cursor-pointer text-theme-label-primary bg-theme-bg-secondary typo-callout flex"
      type="button" onclick="location.href='/login'">
      <span class="block ml-3 mr-2"><%= t ".log_in" %></span>
    </button>
  <% end%>
</header>
